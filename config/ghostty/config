theme = tokyonight
background = #000000
macos-non-native-fullscreen = true
macos-window-shadow = false
macos-icon-frame = beige
window-width = 100000
window-height = 100000
window-padding-x = 5
window-padding-y = 5
confirm-close-surface = false
macos-auto-secure-input = true
macos-option-as-alt = left
macos-secure-input-indication = true
macos-titlebar-style = tabs
window-save-state = always

# font

font-family = Berkeley Mono
# font-family = MonoLisa
# font-family = Operator Mono SSm
# font-family = Roboto Mono
# font-family = Monaspace Neon
# font-family = IntelOne Mono
# font-family = JetBrains Mono
font-size = 16
adjust-cell-height = -2%
adjust-cell-width = -10%
window-inherit-font-size = false
font-thicken = false

# cursor

cursor-style = block
shell-integration-features = no-cursor

# splits

# - create
keybind = opt+\=new_split:right
keybind = opt+'=new_split:down

# - move
keybind = alt+l=goto_split:right
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:bottom
keybind = alt+k=goto_split:top

# - resize
keybind = alt+.=equalize_splits
keybind = alt+shift+h=resize_split:left,10
keybind = alt+shift+j=resize_split:down,10
keybind = alt+shift+k=resize_split:up,10
keybind = alt+shift+l=resize_split:right,10

# - focus
keybind = opt+z=toggle_split_zoom

# - no shade on unfocused splits
unfocused-split-opacity = 1

# navigation

keybind = opt+b=scroll_page_up
keybind = opt+f=scroll_page_down

