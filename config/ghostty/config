# theme

theme = Jellybeans
background = #000000
window-theme = ghostty
window-decoration = false
macos-non-native-fullscreen = true
macos-window-shadow = false
macos-icon-frame = beige

# osx behaviours

macos-auto-secure-input = true
macos-option-as-alt = left
macos-secure-input-indication = true

# font

font-family = Berkeley Mono
font-size = 18
adjust-cell-height = 0%
adjust-cell-width = -8%
window-inherit-font-size = true

# cursor

cursor-style = block
shell-integration-features = no-cursor

# splits

# - create
keybind = cmd+ctrl+\=new_split:right
keybind = cmd+ctrl+'=new_split:down

# - move
keybind = cmd+ctrl+l=goto_split:right
keybind = cmd+ctrl+h=goto_split:left
keybind = cmd+ctrl+j=goto_split:bottom
keybind = cmd+ctrl+k=goto_split:top

# - resize
keybind = cmd+ctrl+.=equalize_splits

# - focus
keybind = cmd+ctrl+z=toggle_split_zoom

# - no shade on unfocused splits
unfocused-split-opacity = 1

