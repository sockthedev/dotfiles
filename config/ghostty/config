theme = tokyonight
background = #000000
window-theme = ghostty
macos-non-native-fullscreen = true
macos-window-shadow = false
macos-icon-frame = beige
window-width = 100000
window-height = 100000
window-padding-x = 5
window-padding-y = 5
term=xterm-256colo
confirm-close-surface = false
macos-auto-secure-input = true
macos-option-as-alt = left
macos-secure-input-indication = true
macos-titlebar-style = tabs
minimum-contrast = 1.1
window-save-state = always

# font

font-family = Berkeley Mono
font-size = 18
adjust-cell-height = 0%
adjust-cell-width = -8%
window-inherit-font-size = true

# cursor

cursor-style = block
shell-integration-features = no-cursor

# splits

# - create
keybind = cmd+opt+\=new_split:right
keybind = cmd+opt+'=new_split:down

# - move
keybind = cmd+opt+l=goto_split:right
keybind = cmd+opt+h=goto_split:left
keybind = cmd+opt+j=goto_split:bottom
keybind = cmd+opt+k=goto_split:top

# - resize
keybind = cmd+opt+.=equalize_splits
keybind = cmd+opt+shift+h=resize_split:left,10
keybind = cmd+opt+shift+j=resize_split:down,10
keybind = cmd+opt+shift+k=resize_split:up,10
keybind = cmd+opt+shift+l=resize_split:right,10

# - focus
keybind = cmd+opt+z=toggle_split_zoom

# - no shade on unfocused splits
unfocused-split-opacity = 1

# navigation

keybind = cmd+opt+b=scroll_page_up
keybind = cmd+opt+f=scroll_page_down

