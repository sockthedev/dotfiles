{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "model": "anthropic/claude-sonnet-4-5",
  "autoshare": false,
  "autoupdate": false,
  "layout": "stretch",
  "lsp": {
    "typescript": {
      "disabled": true
    },
    "typescript-go": {
      "command": ["tsgo", "--lsp", "--stdio"],
      "extensions": [
        ".ts",
        ".tsx",
        ".js",
        ".jsx",
        ".mjs",
        ".cjs",
        ".mts",
        ".cts"
      ]
    }
  }
}
